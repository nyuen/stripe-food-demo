{{> header route="Home"}}
<main class="flex-1 relative">
  {{! HERO SECTION START }}
  <div class="relative overflow-hidden z-10 py-44 sm:py-64">
    <div
      class="hidden sm:block sm:absolute sm:inset-y-0 sm:h-full sm:w-full z-10"
      aria-hidden="true"
    >
      <div class="relative h-full">
        <img
          class="object-cover object-center w-full h-full"
          src="/images/home-hero-section.png"
          alt=""
        />
        <div class="absolute top-0 bottom-0 left-0 right-1/4 hero-gradient"></div>
      </div>

    </div>
    <div
      class="py-8 sm:py-28 md:py-8 mx-auto max-w-7xl px-4 md:px-6 xl:px-0 absolute left-0 right-0 top-0 bottom-0 z-10 xxs:bg-gray-50 sm:bg-transparent flex items-start lg:items-center"
    >
      <div class="text-left">
        <h1
          class="text-4xl tracking-tight font-extrabold text-dark-gray-900 sm:text-5xl md:text-6xl"
        >
          <div class="block xl:inline text-gray-900">
            {{__ "index.hero.banner.part1" }}
          </div>
          <div class="block xl:inline text-green-700">
            {{__ "index.hero.banner.part2" }} 
          </div>
        </h1>
        <p
          class="mt-3 max-w-md font-normal text-gray-500 sm:text-lg md:mt-5 md:text-xl md:max-w-lg"
        >
          {{__ "index.hero.lead"}}
        </p>
        <div class="mt-5 md:mt-8 w-full">
          <p class="mt-3 max-w-md text-base leading-6 font-medium text-gray-900">
            {{__ "index.hero.cta.text"}}
          </p>
          <div class="w-full">
            <a
              href="/products"
              class="w-full sm:w-52 inline-flex items-center justify-center px-4 py-3 mt-4 mb-6 mr-10 border border-transparent rounded-full shadow-sm text-base font-normal text-white bg-green-800 hover:bg-green-900"
            >

              {{__ "index.hero.cta.button"}}
            </a>
            <a
              href="/subscribe"
              class="w-full sm:w-52 inline-flex items-center justify-center px-4 py-3 mt-4 mb-6 border border-transparent rounded-full shadow-sm text-base font-normal text-white bg-green-800 hover:bg-green-900"
            >
              {{__ "index.subscribe.cta.button"}}
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
  {{! HERO SECTION END }}
  {{! BLOG SECTION START }}
  <div class="relative bg-gray-50 pt-16 pb-20 px-4 sm:px-6 lg:pt-24 lg:pb-28 lg:px-8">
    <div class="relative max-w-7xl mx-auto pointer-events-none">
      <div class="text-center">
        <h2 class="text-3xl tracking-tight font-extrabold text-gray-900 sm:text-4xl">
          {{__ "index.favorites.header"}}
        </h2>
      </div>
      <div class="mt-16 sm:mt-12 max-w-lg mx-auto grid gap-5 lg:grid-cols-3 lg:max-w-none">
        <div class="flex flex-col rounded-lg shadow-lg overflow-hidden">
          <div class="flex-shrink-0">
            <img class="h-48 w-full object-cover" src="/images/food/curry.jpeg" alt="" />
          </div>
          <div class="flex-1 bg-white p-6 flex flex-col justify-between">
            <div class="flex-1">
              <p class="text-sm font-medium">
                <a href="#" class="hover:underline text-green-600">
                  {{__ "index.favorites.1.label"}}
                </a>
              </p>
              <a href="#" class="block mt-2">
                <p class="text-xl font-semibold text-gray-900">
                  {{__ "index.favorites.1.description"}}                  
                </p>
              </a>
            </div>
          </div>
        </div>
        <div class="flex flex-col rounded-lg shadow-lg overflow-hidden">
          <div class="flex-shrink-0">
            <img class="h-48 w-full object-cover" src="/images/food/satay1.jpeg" alt="" />
          </div>
          <div class="flex-1 bg-white p-6 flex flex-col justify-between">
            <div class="flex-1">
              <p class="text-sm font-medium">
                <a href="#" class="hover:underline text-green-600">
                  {{__ "index.favories.2.label"}}
                </a>
              </p>
              <a href="#" class="block mt-2">
                <p class="text-xl font-semibold text-gray-900">
                  {{__ "index.favorites.2.description"}}                  
                </p>
              </a>
            </div>
          </div>
        </div>
        <div class="flex flex-col rounded-lg shadow-lg overflow-hidden">
          <div class="flex-shrink-0">
            <img class="h-48 w-full object-cover" src="/images/food/mangorice3.jpeg" alt="" />
          </div>
          <div class="flex-1 bg-white p-6 flex flex-col justify-between">
            <div class="flex-1">
              <p class="text-sm font-medium">
                <a href="#" class="hover:underline text-green-600">
                  {{__ "index.favorites.3.label"}}
                </a>
              </p>
              <a href="#" class="block mt-2">
                <p class="text-xl font-semibold text-gray-900">
                  {{__ "index.favorites.3.description"}}                  
                </p>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  {{! BLOG SECTION END }}
  {{! STATS SECTION START }}
  <div class="bg-gray-50 pt-12 sm:pt-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">
          {{__ "index.stats.header" }}
        </h2>
        <p class="mt-3 text-xl leading-7 font-normal text-gray-500 sm:mt-4">
          {{__ "index.stats.lead" }}
        </p>
      </div>
    </div>
    <div class="mt-10 pb-12 bg-white sm:pb-16">
      <div class="relative">
        <div class="absolute inset-0 h-1/2 bg-gray-50"></div>
        <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="max-w-4xl mx-auto">
            <dl class="rounded-lg bg-white shadow-lg sm:grid sm:grid-cols-3">
              <div
                class="flex flex-col border-b border-gray-100 p-6 text-center sm:border-0 sm:border-r"
              >
                <dt class="order-2 mt-2 text-lg leading-6 font-medium text-gray-500">
                  {{__ "index.stats.ordersRepeated" }}                  
                </dt>
                <dd class="order-1 text-5xl font-extrabold text-green-800">
                  64%
                </dd>
              </div>
              <div
                class="flex flex-col border-t border-b border-gray-100 p-6 text-center sm:border-0 sm:border-l sm:border-r"
              >
                <dt class="order-2 mt-2 text-lg leading-6 font-medium text-gray-500">
                  {{__ "index.stats.delivery" }}                  
                </dt>
                <dd class="order-1 text-5xl font-extrabold text-green-800">
                  24/7
                </dd>
              </div>
              <div
                class="flex flex-col border-t border-gray-100 p-6 text-center sm:border-0 sm:border-l"
              >
                <dt class="order-2 mt-2 text-lg leading-6 font-medium text-gray-500">
                  {{__ "index.stats.users" }}                  
                </dt>
                <dd class="order-1 text-5xl font-extrabold text-green-800">
                  100k
                </dd>
              </div>
            </dl>
          </div>
        </div>
      </div>
    </div>
  </div>
  {{! STATS SECTION END }}
  {{! FEATURE SECTION START }}
  <div class="py-16 bg-white overflow-hidden lg:py-24">
    <div class="relative max-w-xl mx-auto px-4 sm:px-6 lg:px-8 lg:max-w-7xl">
      <div class="relative">
        <h2
          class="text-center text-4xl leading-10 font-extrabold tracking-tight text-gray-900 sm:text-4xl"
        >
          {{__ "index.how.header" }}
        </h2>
        <p class="mt-4 max-w-3xl mx-auto text-xl leading-7 font-normal text-center text-gray-500">
        </p>
      </div>
      <div class="relative mt-12 lg:mt-24 lg:grid lg:grid-cols-2 lg:gap-8">
        <div class="relative pt-2">
          <h3 class="text-3xl leading-9 font-extrabold tracking-tight text-gray-900">
            {{__ "index.how.section1.header" }}
          </h3>
          <p class="mt-3 text-lg leading-7 font-normal text-gray-500">
          </p>
          <dl class="mt-10 space-y-16">
            <div class="relative">
              <dt class="flex items-center">
                <div
                  class="absolute flex items-center justify-center h-12 w-12 rounded-full bg-green-800 text-white"
                >
                  <!-- Heroicon name: outline/globe-alt -->
                  <svg
                    class="h-6 w-6"
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                    aria-hidden="true"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"
                    ></path>
                  </svg>
                </div>
                <p class="ml-16 text-lg leading-6 font-medium text-gray-900">
                  {{__ "index.how.section1.feature1" }}
                </p>
              </dt>
            </div>
            <div class="relative">
              <dt class="flex items-center">
                <div
                  class="absolute flex items-center justify-center h-12 w-12 rounded-full bg-green-800 text-white"
                >
                  <!-- Heroicon name: outline/scale -->
                  <svg
                    class="h-6 w-6"
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                    aria-hidden="true"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3"
                    ></path>
                  </svg>
                </div>
                <p class="ml-16 text-lg leading-6 font-medium text-gray-900">
                  {{__ "index.how.section1.feature2" }}
                </p>
              </dt>
            </div>
            <div class="relative">
              <dt class="flex items-center">
                <div
                  class="absolute flex items-center justify-center h-12 w-12 rounded-full bg-green-800 text-white"
                >
                  <!-- Heroicon name: outline/lightning-bolt -->
                  <svg
                    class="h-6 w-6"
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                    aria-hidden="true"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M13 10V3L4 14h7v7l9-11h-7z"
                    ></path>
                  </svg>
                </div>
                <p class="ml-16 text-lg leading-6 font-medium text-gray-900">
                  {{__ "index.how.section1.feature3" }}
                </p>
              </dt>
            </div>
          </dl>
        </div>
        <div class="mt-10 xxs:mx-auto md:mx-0 md:ml-auto relative lg:mt-0 w-1/2" aria-hidden="true">
          <img class="relative mx-auto" width="490" src="/images/feature-1.png" alt="" />
        </div>
      </div>
      <div class="relative mt-12 sm:mt-16 lg:mt-24">
        <div class="lg:grid lg:grid-flow-row-dense lg:grid-cols-2 lg:gap-8">
          <div class="lg:col-start-2 pt-2">
            <h3 class="text-3xl leading-9 font-extrabold tracking-tight text-gray-900">
              {{__ "index.how.section2.header" }}
            </h3>
            <p class="mt-3 text-lg leading-7 font-normal text-gray-500">
            </p>
            <dl class="mt-10 space-y-16">
              <div class="relative">
                <dt class="flex items-center">
                  <div
                    class="absolute flex items-center justify-center h-12 w-12 rounded-full bg-green-800 text-white"
                  >
                    <!-- Heroicon name: outline/annotation -->
                    <svg
                      class="h-6 w-6"
                      xmlns="http://www.w3.org/2000/svg"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                      aria-hidden="true"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"
                      ></path>
                    </svg>
                  </div>
                  <p class="ml-16 text-lg leading-6 font-medium text-gray-900">
                    {{__ "index.how.section2.feature1" }}
                  </p>
                </dt>
              </div>
              <div class="relative">
                <dt class="flex items-center">
                  <div
                    class="absolute flex items-center justify-center h-12 w-12 rounded-full bg-green-800 text-white"
                  >
                    <!-- Heroicon name: outline/mail -->
                    <svg
                      class="h-6 w-6"
                      xmlns="http://www.w3.org/2000/svg"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                      aria-hidden="true"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                      ></path>
                    </svg>
                  </div>
                  <p class="ml-16 text-lg leading-6 font-medium text-gray-900">
                    {{__ "index.how.section2.feature2" }}
                  </p>
                </dt>
              </div>
            </dl>
          </div>
          <div class="mt-10 -mx-4 relative lg:mt-0 lg:col-start-1">
            <img class="relative mx-auto" width="490" src="/images/feature-2.png" alt="" />
          </div>
        </div>
      </div>
    </div>
  </div>
  {{! FEATURE SECTION END }}
  {{! CTA SECTION START }}
  <div class="bg-green-900">
    <div class="max-w-2xl mx-auto text-center py-16 px-4 sm:py-20 sm:px-6 lg:px-8">
      <h2 class="text-4xl leading-10 font-extrabold text-white">
        <span class="block">
          {{__ "index.footer.cta.header1" }}
        </span>
      </h2>
      <p class="mt-4 text-lg leading-6 text-green-50">
      </p>
      <a
        href="/signup"
        class="mt-8 w-full inline-flex items-center justify-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-green-800 bg-white sm:w-auto"
      >
        {{__ "index.footer.cta.button" }}
      </a>
    </div>
  </div>
  {{! CTA SECTION END }}
</main>
{{> footer}}
